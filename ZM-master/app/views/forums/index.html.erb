<% title "Forums" %>  
<p id="notice"><%= notice %></p>
<table>  
  <tr>  
    <th width="70%">Forum</th>  
    <th width="30%">Last Post</th>  
  </tr>  
  <% for forum in @forums %>  
  <tr>  
    <td><h4><%= link_to forum.name, forum_path(forum.id) %></h4>  
      <%= forum.description %><br />
      <%= forum.topics.count %> topics</td>  
      <td class="right">
        <% if forum.most_recent_post %><%= forum.most_recent_post.last_post_at %> ago
        <% else %>
        no posts
        <% end %>
      </td> 
      <% if admin_is_logged_in? %>
      <td><%= link_to "Show", forum %></td>  
      <td><%= link_to "Edit", edit_forum_path(forum) %></td>  
      <td><%= link_to "Destroy", forum, :confirm => 'Are you sure?', :method => :delete %></td> 
      <% else %>
      <td></td> 
      <td></td>
      <td></td>
      <% end %> 
    </tr>  
    <% end %>  
  </table>

  <% if admin_is_logged_in? %>

  <p><%= link_to "New Forum", new_forum_path, class: "button radius" %></p>  

  <% end %>