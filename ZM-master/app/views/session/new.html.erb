<h1>Sign In</h1>
<%= form_tag session_index_path do %>
<p id="notice"><%= notice %></p>
<p>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
</p>
<p>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</p>

<p>
  <%= label_tag :is_admin %><br />
  <%= check_box_tag :is_admin %>
</p>

<p class="button">
  <%= submit_tag "Log In" %>
</p>
<% end %>