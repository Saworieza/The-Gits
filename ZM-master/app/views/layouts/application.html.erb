<head>
 <meta charset="utf-8" />

 <!-- Uncomment to make IE8 render like IE7 -->
 <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

 <!-- Set the viewport width to device width for mobile -->
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />

 <title><%= content_for?(:title) ? yield(:title) : "Azma" %></title>
 <%= stylesheet_link_tag    "application" %>
 <%= javascript_include_tag "vendor/custom.modernizr" %>
 <%= csrf_meta_tags %>
</head>

<body style="background-color:#C0C0C0;">
  <div class="shadow">
    <header class="header">
      <div class="row">
        <div class="centered">
          <img class="bg" src="/assets/azmabody.jpg">
        </div>
      </div>

      <div class="row">
        <nav class="top-bar">
          <ul class="title-area">
            <li class="name">
              <h1><%= link_to "Azma", welcome_home_path %></a></h1>
            </li>
          </ul>
          <section class="top-bar-section">
            <ul class="centre">
              <li class="divider"></li>
              <li><%= link_to "Home", welcome_home_path %></li>
              <li class="divider"></li>
              <li><%= link_to "About Us", welcome_aboutus_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Events", events_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Blogs", blogs_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Discussion Forums", forums_path %></li>
              <!---<li class="divider"></li>
              <li><%= link_to "Galleries" %></li>-->
            </ul>
          </section>
          <section>
            <% if someone_is_logged_in? %>
            <%= session[:user].username %> |
            <%= link_to "Log Out", log_out_path%>

            <% else %>
            
            <%= link_to "Register", new_user_path %> |
            <%= link_to "Sign In", new_session_path %>
            <% end %>
          </section>
        </nav>
      </div>
    </header>
    <section>
      <div class="row">
       <div class="small-12 columns">
        <%= yield %>
      </div>
    </div>
  </section>
  <div class="row">
    <div class="footer">
      This is the footer area.
    </div>
  </div>
</div>
<%= javascript_include_tag "application" %>
</body>
</html>
